<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace和定义的Mapper接口对应，并实现其中的方法 -->
<mapper namespace="com.ump.cfn.sysmgr.code.dao.CodeInfoDao">
	<resultMap type="com.ump.cfn.sysmgr.code.model.CodeInfo" id="codeInfoResultMap"
		extends="com.ump.core.base.dao.BaseDao.baseResultMap">
		<id column="id" property="id" />
		<result column="code_info_code" property="codeInfoCode" jdbcType="VARCHAR" />
		<result column="code_info_value" property="codeInfoValue" jdbcType="VARCHAR" />
		<result column="code_info_desc" property="codeInfoDesc" jdbcType="VARCHAR" />
		<result column="code_type_code" property="codeTypeCode" jdbcType="VARCHAR" />
		<result column="parent_code_id" property="parentCodeId" jdbcType="VARCHAR" />
		<result column="order_no" property="orderNo" jdbcType="INTEGER" />
	</resultMap>

	<select id="findById" resultMap="codeInfoResultMap" parameterType="java.lang.String">
		select id,code_info_code,code_info_value,code_info_desc,code_type_code,parent_code_id,order_no,creator,create_time,updator,update_time
		  from SYS_CODE_INFO
		 where id = #{value}
		   and status = '1'
		   and del_flag = 'n'
	</select>

</mapper>