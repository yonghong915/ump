<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace和定义的Mapper接口对应，并实现其中的方法 -->
<mapper namespace="com.ump.cfn.sysmgr.permission.dao.PermissionDao">
	<resultMap type="com.ump.cfn.sysmgr.permission.model.Permission" id="permissionResultMap"
		extends="com.ump.core.base.dao.BaseDao.baseResultMap">
		<id column="pid" property="permissionId" />
		<result column="permission_name" property="permissionName" jdbcType="VARCHAR" />
		<result column="permission_desc" property="permissionDesc" jdbcType="VARCHAR" />
	</resultMap>

	<select id="findById" resultMap="permissionResultMap" parameterType="java.lang.String">
		SELECT pid,permission_name,permission_desc
		FROM sys_permission
		WHERE pid = #{value}
	</select>

</mapper>