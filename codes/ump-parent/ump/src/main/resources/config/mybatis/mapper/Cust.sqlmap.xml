<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace和定义的Mapper接口对应，并实现其中的方法 -->
<mapper namespace="com.ump.cust.dao.CustDao">
	<resultMap type="com.ump.cust.model.Cust" id="custResultMap" extends="com.ump.core.base.dao.BaseDao.baseResultMap">
		<result column="cust_code" property="custCode" jdbcType="VARCHAR" />
		<result column="cust_name" property="custName" jdbcType="VARCHAR" />
		<result column="cust_desc" property="custDesc" jdbcType="VARCHAR" />
		<result column="cust_type" property="custType" jdbcType="CHAR" />
	</resultMap>

	<sql id="sql_select">
		SELECT id,cust_code,
		cust_name,
		cust_desc,
		cust_type,
		status,
		creator,
		create_date,
		updator,
		update_date
	</sql>
	<sql id="base_column_list">
		cust_name
	</sql>

	<select id="findCustByCustCode" resultMap="custResultMap" parameterType="java.lang.String">
		<include refid="sql_select" />
		FROM bus_cust_info
		WHERE cust_code = #{value}
		AND status = '1'
	</select>
	
	<insert id="insertCust" parameterType="com.ump.cust.model.Cust">
	     INSERT INTO bus_cust_info(id,cust_code,cust_name)
	     VALUES(#{id},#{custCode},#{custName})
	</insert>

</mapper>